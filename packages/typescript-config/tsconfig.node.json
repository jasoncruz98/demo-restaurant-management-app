{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "composite": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true
  }
}
