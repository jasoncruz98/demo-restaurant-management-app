{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "baseUrl": "../",
    "paths": {
      "@web/*": ["web/*"],
      "@api/*": ["api/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "references": [
    { "path": "web" },
    { "path": "api" }
  ]
}